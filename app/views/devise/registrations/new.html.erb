<div style="float:left;margin-left:30%;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class=>'pure-form pure-form-stacked'}) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
        <legend>Sign Up</legend>
        <label for="fname">Name</label>
        <%= f.text_field :f_name, :placeholder=>"Name" %>
        <label for="email">Email</label>
        <%= f.email_field :email, autofocus: true, :placeholder=>"Email" %>
        <label for="password">Password</label>
        <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password" %>
       <!--  <%# if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <%# end %><br /> -->
        <label for="confirmpassword">Confirm Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"Confirm Password" %>

        <label for="state">Role</label>
        
        <%= collection_select(:user, :role_id, Role.where('roletype not in(?)', "admin"), :id, :roletype)  %>
        </br>
        <%= f.submit "Sign up", :class=>"pure-button pure-button-primary", :style=>'float:right' %>
       <!--  <button type="submit" class="pure-button pure-button-primary">Sign in</button> -->


    </fieldset>
<%end%>


       <%#= render "devise/shared/links" %>
       </div>










