
<div class="div_cls">

  <%if user_signed_in? %>
  <% if is_student? %>
  <%=link_to 'Home', home_index_path%><br>
   <%#@student.each do |student|%>
   <%#=link_to 'My Profile' student_path(current_user.student.id)%>
   <%#end%>
  <%=link_to 'My Assignment' , assignments_path%><br>
  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
  <% elsif is_trainer?%>
  <%=link_to 'Home', home_index_path%><br>
  <%=link_to 'Post Assignment' , new_assignment_path%><br>
  <%=link_to 'Submitted Assignments' , submitted_assignments_path%><br>
  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
  <% elsif is_admin?%> 
 <%=link_to 'Home', admin_index_path%><br>
 <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
  <%end%>
  <p>Welcome <span><%= current_user.f_name %></span></p>
  <% else %>
  <p>You are not signed in.</p>
  <%= link_to 'Sign In', new_user_session_path %>
  <% end %>
</div>

<style type="text/css">
  .div_cls{
    float:right;
  }
  .div_cls a{
    font-size: 11px;
    text-decoration: none;
  }
  .div_cls a:hover{
    font-size: 11px;
    text-decoration: underline;
  }
  .div_cls p{
    color: #000;
  }
  .div_cls p span{
    color: #ff0000;
  }

</style>