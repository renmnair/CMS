<h1>Roles#index</h1>
<p>Find me in app/views/roles/index.html.erb</p>

<tr>
 <td><%= link_to 'New',  new_role_path%></td>
 </tr>

 <table>
  <tr>
    <th>Roletype</th>
    <th>Description</th>
    <th>Actions</th>
    <th colspan="2"></th>
  </tr>

<% @roles.each do |role| %>
  
  <tr>
    <td><%= role.roletype %></td>
    <td><%= role.description %></td>
    <td><%= link_to 'Show',  role_path(role)%></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Delete', role_path(role),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
