<h1>Creating Student</h1>
<% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>

<%= form_for @student  do |f| %>
  <p>
    <%= f.label :admission_no%><br>
    <%= f.text_field :admission_no %>
  </p>
  <p>
    <%= f.label :admission_date %><br>
    <%= f.date_field :admission_date %>
  </p>

  <p>
    <%= f.label :first_name%><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :middle_name%><br>
    <%= f.text_field :middle_name %>
  </p>

  <p>
    <%= f.label :last_name%><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :date_of_birth%><br>
    <%= f.text_field :date_of_birth %>
  </p>

  <p>
    <%= f.label :gender%><br>
    <%= f.text_field :gender %>
  </p>
  
  <p>
    <%= f.label :blood_group%><br>
    <%= f.text_field :blood_group %>
  </p>

  <p>
    <%= f.label :language%><br>
    <%= f.text_field :language %>
  </p>

  <p>
    <%= f.label :address%><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :phone%><br>
    <%= f.number_field :phone %>
  </p>

  <p>
    <%= f.label :resume%><br>
    <%=f.file_field :resume_filename %>
  </p>

<tr>
    
    <td><%= f.label :course %><br /></td>
    <td><%= collection_select(:student, :course_id, Course.all, :id, :course_name)  %> </td>
    
  </tr>
  

  <p>
    <%= f.submit %>
  </p>

  


  <% end %>
  <tr>
 <td><%= link_to 'Back' ,:back%></td>
 </tr>